{
  "name": "@mizdra/type-safe-event-target",
  "description": "This is a type-safe version of `EventTarget`",
  "version": "0.0.0",
  "repository": "https://github.com/mizdra/type-safe-event-target.git",
  "author": "mizdra <pp.mizdra@gmail.com>",
  "license": "MIT",
  "private": false,
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "files": [
    "src",
    "dist"
  ],
  "main": "dist/umd/index.js",
  "module": "dist/esm/index.js",
  "sideEffects": false,
  "scripts": {
    "start": "node dist/index.js",
    "prebuild": "rimraf dist",
    "build": "run-s build:umd build:esm",
    "build:umd": "tsc --module UMD --outDir dist/umd",
    "build:esm": "tsc --module ESNext --outDir dist/esm",
    "dev": "ts-node src/index.ts",
    "check": "run-p -l -c 'check:tsc --pretty' 'check:eslint --color' check:prettier",
    "check:eslint": "eslint 'src/**/*.{ts,tsx}'",
    "check:tsc": "tsc --noEmit",
    "check:prettier": "prettier -l 'src/**/*.{ts,tsx}'",
    "test": "run-p -l -c 'test:type --pretty' 'test:jest --colors'",
    "test:type": "tsc -p test-d --noEmit",
    "test:jest": "jest"
  },
  "devDependencies": {
    "@mizdra/eslint-config-mizdra": "^0.5.0",
    "@types/jest": "^26.0.13",
    "@types/node": "^14.6.4",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "eslint": "^7.8.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.4.2",
    "npm-run-all": "^4.1.5",
    "prettier": "2.1.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.3.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2"
  },
  "dependencies": {}
}
